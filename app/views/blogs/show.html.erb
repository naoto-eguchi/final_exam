<h1>ブログ詳細画面</h1>
<p>タイトル: <%= @blog.title %></p>
<p>音声<br><%= audio_tag @blog.audio, :controls => true %></p>
<p>投稿者:<%= @blog.user.name%></p>
<p><%= image_tag @blog.user.image%></p>

<% unless @blog.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(blog_id: @blog.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>


<%= link_to 'ブログ一覧画面にもどる', blogs_path,class: "btn btn-primary" %>